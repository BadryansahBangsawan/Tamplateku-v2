# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# DOKU Payment Gateway
# Mode pembayaran:
# - DOKU      : pakai gateway DOKU
# - SIMULATED : bypass gateway, otomatis sukses (untuk testing flow setelah buy)
PAYMENT_GATEWAY_MODE=DOKU
DOKU_CLIENT_ID=your_doku_client_id
DOKU_SECRET_KEY=your_doku_secret_key
DOKU_API_KEY=your_doku_api_key
# Sandbox: https://api-sandbox.doku.com
# Production: https://api.doku.com
DOKU_BASE_URL=https://api-sandbox.doku.com
# Gunakan domain publik agar callback/notification valid saat local dev.
# Contoh: https://tamplateku.store (jangan localhost)
DOKU_PUBLIC_BASE_URL=https://tamplateku.store
# Daftar metode pembayaran dipisah koma.
# Contoh: PEER_TO_PEER_AKULAKU atau VIRTUAL_ACCOUNT_BCA,QRIS
DOKU_PAYMENT_METHOD_TYPES=
# Kategori item untuk line_items[0].category (dibutuhkan beberapa channel seperti Akulaku)
DOKU_LINE_ITEM_CATEGORY=other

# Cloudflare D1 (SQLite) via Cloudflare API
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_D1_DATABASE_ID=your_d1_database_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_with_d1_edit_permission
ADMIN_EMAILS=
TEMPLATE_ADMIN_EMAILS=
SUPER_ADMIN_EMAILS=badryansah99@gmail.com

# OTP Security
OTP_PEPPER=replace_with_minimum_16_characters_secret
RESET_TOKEN_SECRET=replace_with_minimum_32_characters_secret

# OTP Email Delivery (Recommended: Resend API)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SMTP_FROM="Tamplateku <no-reply@tamplateku.store>"

# SMTP fallback (optional, used when RESEND_API_KEY is empty)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
